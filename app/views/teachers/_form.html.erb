<%= render 'shared/error_messages', error_object: @teacher %>

<div>
  <%= form_for @teacher do |f| %>
    <%=f.label 'First Name' %>
    <%= f.text_field :first_name %>
    </br>
    <%=f.label 'Last Name' %>
    <%= f.text_field :last_name %>
    </br>
    <%= f.submit(@teacher.new_record? ? 'Add New Teacher' : 'Update Name', class: 'btn btn-primary') %>

  <% end %>
</div>